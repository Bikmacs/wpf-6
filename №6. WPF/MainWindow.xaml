<Window x:Class="_6._WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6._WPF"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="610" Width="726">

    <Grid Margin="-6,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="714*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" Background="LightBlue" Grid.Row="0" Margin="0,0,0,5" Grid.ColumnSpan="2">
            <Button Content="Главная"  Height="38" Width="150" Margin="5"/>
            <Button Content="Профиль"  Height="38" Width="150" Margin="5"/>
            <Button Content="Настройки" Height="38" Width="150" Margin="5"/>
            <Button Content="Помощь" Height="38" Width="150" Margin="5"/>
        </WrapPanel>

        <Grid Grid.Row="1" Margin="10,10,40,257">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <Border BorderBrush="Gray" BorderThickness="1" Height="200" Width="200" Background="#f0f0f0" HorizontalAlignment="Left">
                    <Button Content="Загрузить фото" Margin="17,169,17,9"/>
                </Border>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Margin="208,0,245,0" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="ФИО:" VerticalAlignment="Center" Width="120"/>
                    <TextBox  Width="330" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Email:" VerticalAlignment="Center" Width="120"/>
                    <TextBox  Width="330" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Телефон:" VerticalAlignment="Center" Width="120"/>
                    <TextBox  Width="330" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Дата рождения:" VerticalAlignment="Center" Width="120"/>
                    <DatePicker Width="330"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Пол:" VerticalAlignment="Center" Width="120"/>
                    <RadioButton Content="Мужской" Width="80" Margin="4"/>
                    <RadioButton Content="Женский" Width="80" Margin="4"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Пароль:" VerticalAlignment="Center" Width="150"/>
                    <PasswordBox Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Подтверждение пароля:" VerticalAlignment="Center" Width="150"/>
                    <PasswordBox Width="300"/>
                </StackPanel>
            </StackPanel>

        </Grid>
        <WrapPanel Grid.Row="1" Background="#f5f5f5" Margin="20,284,40,78"/>
        <Label Content="* Пароль должен содержать минимум 8 символов. " HorizontalAlignment="Left" Margin="45,307,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="* Email должен быть в формате name@mail.com. " HorizontalAlignment="Left" Margin="45,348,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14" />
        <Label Content="* Все поля обязательны." HorizontalAlignment="Left" Margin="419,348,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14" />
        <WrapPanel Grid.ColumnSpan="2"/>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="426,486,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="595,486,0,0" Grid.Row="1" VerticalAlignment="Top" Width="85"/>
        <StatusBarItem Content ="Готов"  Background="LightGray" Grid.Row="1" Height="24" Margin="6,515,0,0" Grid.ColumnSpan="2" />

    </Grid>
</Window>
